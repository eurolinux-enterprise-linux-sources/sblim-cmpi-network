[ Provider("cmpi:cmpiOSBase_IPProtocolEndpointProvider"),
  Description ("A class derived from IPProtocolEndpoint"
  " to represent the IP Configuration." )
] 
class Linux_IPProtocolEndpoint : CIM_IPProtocolEndpoint
{ };


