// *******************************************************************
// -------------------------------------------------------------------



// ===================================================================
// 	Linux_CSNetworkPort
// ===================================================================

[ Association, 
  Aggregation,
  Composition,
  Provider("cmpi:cmpiOSBase_CSNetworkPortProvider") ] 
class Linux_CSNetworkPort : CIM_SystemDevice
{ 
  [ Override ("GroupComponent"),
    Description ("The Computer System Container.")
  ]
  Linux_ComputerSystem REF GroupComponent;

  [ Override ("PartComponent"),
    Description ("The Network Ports, available to the CS.")
  ]
  CIM_NetworkPort REF PartComponent;
};


// ===================================================================
// 	Linux_PortImplementsEndpoint
// ===================================================================

[ Association,
  Provider("cmpi:cmpiOSBase_NetworkPortImplementsIPEndpointProvider") ] 
class Linux_NetworkPortImplementsIPEndpoint : CIM_PortImplementsEndpoint
{ 
  [ Override ("Antecedent"),
    Description ("The Network Ports, available to the CS.")
  ]
  CIM_NetworkPort REF Antecedent;

  [ Override ("Dependent"),
    Description ("The IP Protocol Endpoints, available to the CS.")
  ]
  Linux_IPProtocolEndpoint REF Dependent;
};
